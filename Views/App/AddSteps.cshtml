@model TCM.Models.TestCase
@{
    ViewData["Title"] = "Add Steps";
}

@section scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h2>Add steps to test case</h2>
        <form asp-controller="App" asp-action="AddSteps" method="post">
            <span asp-validation-summary="ModelOnly"></span>
            @if (ViewBag.UserMessage != null)
            {
                <div>@ViewBag.UserMessage</div>

            }
            <div class="form-group">
                <label asp-for="Steps">Action</label>
                <input asp-for="Steps" class="form-control" />
                <span asp-validation-for="Steps" class="text-muted"></span>
            </div>
            <div class="form-group">
                <label asp-for="Steps">Result</label>
                <input asp-for="Steps" class="form-control" />
                <span asp-validation-for="Steps" class="text-muted"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-success">Add</button>

            </div>
        </form>
    </div>
</div>